<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".KickPanelActivity"
	tools:showIn="@layout/activity_kickpanel">

	<TextView
		android:id="@+id/text_welcome"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/welcome"/>

	<Button
		android:id="@+id/button_device_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/text_welcome"
		android:layout_alignParentStart="true"
		android:onClick="button_start_device_list"
		android:text="@string/button_device_list"/>

	<Button
		android:id="@+id/button_kickpanel_A"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/button_device_list"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="35dp"
		android:onClick="button_click_kickpanel_A"
		android:text="@string/button_bt_check"/>

	<Button
		android:id="@+id/button_kickpanel_B"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/button_kickpanel_A"
		android:layout_centerHorizontal="true"
		android:layout_marginLeft="35dip"
		android:layout_marginRight="35dip"
		android:layout_marginTop="10dp"
		android:onClick="button_click_kickpanel_B"
		android:text="@string/button_bt_disable"/>


</RelativeLayout>