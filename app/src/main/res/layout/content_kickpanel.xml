<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:context=".KickPanelActivity"
	tools:showIn="@layout/activity_kickpanel">

	<TextView
		android:id="@+id/text_kickpanel_welcome"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/kickpanel_bt_state_none"/>

	<Button
		android:id="@+id/button_device_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/text_kickpanel_welcome"
		android:onClick="buttonStartDeviceList"
		android:text="@string/button_device_list"/>

	<Button
		android:id="@+id/button_kickpanel_a"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/button_device_list"
		android:layout_marginTop="35dp"
		android:onClick="buttonClickKickpanelA"
		android:text="@string/kickpanel_button_a"/>

	<Button
		android:id="@+id/button_kickpanel_b"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/button_kickpanel_a"
		android:onClick="buttonClickKickpanelB"
		android:text="@string/kickpanel_button_b"/>

	<Button
		android:id="@+id/button_kickpanel_c"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/button_kickpanel_b"
		android:onClick="buttonClickKickpanelC"
		android:text="@string/kickpanel_button_c"/>

</RelativeLayout>